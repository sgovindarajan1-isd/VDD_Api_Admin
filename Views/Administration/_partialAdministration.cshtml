                            <div class="subSection btn-group" data-toggle="buttons">
                                <label class="smallTopMargin btn btn-sm btn-default" id="lbl_admin">
                                    <input type="checkbox" name="selectedRights" id="chk_admin" value="1" class="hidden1">
                                    <span class="glyphicon glyphicon-unchecked"></span>
                                    <span class="glyphicon glyphicon-check"></span>
                                    Admin
                                </label>
                                <label class="smallTopMargin btn btn-sm btn-default" id="lbl_supervisor">
                                    <input type="checkbox" name="selectedRights" id="chk_supervisor" value="2" class="hidden">
                                    <span class="glyphicon glyphicon-unchecked"></span>
                                    <span class="glyphicon glyphicon-check"></span>
